<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.djordje.seeds.SettingsActivity">

    <LinearLayout
        android:id="@+id/device_settings_wrapper_layout_dialog"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Device: "/>
            <TextView
                android:id="@+id/device_settings_name_dialog"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="ciao"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/value_range_and_schedule_dialog_layout"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/value_range_linearlayout_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:text="Value ranges "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSecondary"
                        android:text="min : "/>
                    <EditText
                        android:layout_width="80dp"
                        android:textSize="15sp"
                        android:id="@+id/value_range_min_dialog"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSecondary"
                        android:text="max: "/>
                    <EditText
                        android:id="@+id/value_range_max_dialog"
                        android:layout_width="80dp"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/device_schedule_linearlayout_dialog"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:text="Schedule: "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/device_schedule_inner_linearlayout"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSecondary"
                        android:text="On: "/>
                    <EditText
                        android:id="@+id/schedule_on_hour_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:hint="hour"/>
                    <EditText
                        android:id="@+id/schedule_on_minute_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:hint="min"/>
                    <EditText
                        android:id="@+id/schedule_on_sec_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="sec"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorSecondary"
                        android:text="Off: "/>
                    <EditText
                        android:id="@+id/schedule_off_hour_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="hour"/>
                    <EditText
                        android:id="@+id/schedule_off_minute_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="min"/>
                    <EditText
                        android:id="@+id/schedule_off_sec_dialog"
                        android:layout_width="80dp"
                        android:textAlignment="center"
                        android:maxLength="2"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="sec"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>